---
apiVersion: v1
kind: Service
metadata:
  name: grafana
  namespace: devops-tools
spec:
  selector:
    app: monitoring-server
  type: NodePort
  ports:
    - port: 3000
      targetPort: 3000
      nodePort: 32000
---
apiVersion: v1
kind: Service
metadata:
  name: prometheus
  namespace: devops-tools
spec:
  selector:
    app: monitoring-server
  type: NodePort
  ports:
    - port: 9090
      targetPort: 9090
      nodePort: 32090
---
apiVersion: v1
kind: Service
metadata:
  name: alertmanager
  namespace: devops-tools
spec:
  selector:
    app: monitoring-server
  type: NodePort
  ports:
    - port: 9093
      targetPort: 9093
      nodePort: 32093